# Application
APP_NAME="Odoo Sync API"
APP_VERSION="2.0.0"
ENVIRONMENT="development"  # development, staging, production
DEBUG=True

# Database (PostgreSQL on Render or local)
DATABASE_URL="postgresql://user:password@localhost:5432/odoo_sync"
# For Render: DATABASE_URL="postgresql://user:password@dpg-xxxxx.oregon-postgres.render.com/dbname"

# Security
SECRET_KEY="your-super-secret-key-change-this-in-production-min-32-chars"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours

# CORS Origins (comma-separated)
ALLOWED_ORIGINS="http://localhost:3000,http://127.0.0.1:3000,https://odoo-sync-frontend.vercel.app"

# Odoo Locations Configuration
# Local Principal
ODOO_PRINCIPAL_URL="http://pladsh3.odoo.com"
ODOO_PRINCIPAL_DB="pladsh3"
ODOO_PRINCIPAL_PORT=443

# Local Sucursal
ODOO_SUCURSAL_URL="http://pladsh4.odoo.com"
ODOO_SUCURSAL_DB="pladsh4"
ODOO_SUCURSAL_PORT=443

# Local Sucursal Sacha
ODOO_SUCURSAL_SACHA_URL="http://pladsh5.odoo.com"
ODOO_SUCURSAL_SACHA_DB="pladsh5"
ODOO_SUCURSAL_SACHA_PORT=443

# Business Rules
IVA_RATE=0.15  # 15% IVA Ecuador
DEFAULT_PROFIT_MARGIN=0.50  # 50% profit margin
MAX_TRANSFER_PERCENTAGE=0.50  # 50% max transfer per product
ECUADOR_TIMEZONE="America/Guayaquil"

# File Storage
UPLOAD_DIR="./uploads"
PDF_DIR="./pdfs"
MAX_FILE_SIZE_MB=10

# Logging
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE="logs/app.log"
